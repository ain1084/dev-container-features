{
    "name": "PulseAudio",
    "id": "pulseaudio",
    "version": "1.0.0",
    "description": "Installs PulseAudio and alsa-utils into the devcontainer",
    "options": {},
    "mounts": [
        {
            "source": "${localEnv:XDG_RUNTIME_DIR}/pulse/native",
            "target": "/mnt/pulse/native",
            "type": "bind"
        }
    ],
    "containerEnv": {
		"PULSE_SERVER": "unix:/mnt/pulse/native"
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
